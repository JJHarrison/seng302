<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="mainBorderPane" prefHeight="600" prefWidth="900.0" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity" stylesheets="css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thirstygoat.kiqo.viewModel.MainController">
  <center>
    <SplitPane fx:id="mainSplitPane" dividerPositions="0.35" minHeight="-Infinity" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
       <items>
         <AnchorPane maxWidth="500.0" minHeight="-1" minWidth="280.0" >
            <children>
              <VBox opacity="1.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
