<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.thirstygoat.kiqo.viewModel.AllocationsTableViewController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <TableView fx:id="allocationsTableView" prefHeight="200" prefWidth="-1">
        <columns>
            <TableColumn fx:id="teamTableColumn" text="Team" />
            <TableColumn fx:id="startDateTableColumn" text="Start Date" />
            <TableColumn fx:id="endDateTableColumn" text="End Date" />
        </columns>
      </TableView>
      <HBox alignment="BOTTOM_RIGHT" spacing="5.0" GridPane.rowIndex="1">
         <children>
             <Button fx:id="allocateTeamButton" disable="true" mnemonicParsing="false" text="+"  />
            <Button fx:id="deleteAllocationButton" disable="true" mnemonicParsing="false" text="-" />
            <Button fx:id="editAllocationButton" disable="true" mnemonicParsing="false" text="Edit" />
         </children>
      </HBox>
   </children>
</GridPane>
