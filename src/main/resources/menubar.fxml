<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.thirstygoat.kiqo.gui.MenuBarController">
   <children>
      <MenuBar useSystemMenuBar="true">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <Menu mnemonicParsing="false" text="New">
                <items>
                  <MenuItem fx:id="newOrganisationMenuItem" mnemonicParsing="false" text="Organisation" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="newProjectMenuItem" mnemonicParsing="false" text="Project" />
                  <MenuItem fx:id="newReleaseMenuItem" mnemonicParsing="false" text="Release" />
                  <MenuItem fx:id="newTeamMenuItem" mnemonicParsing="false" text="Team" />
                  <MenuItem fx:id="newPersonMenuItem" mnemonicParsing="false" text="Person" />
                  <MenuItem fx:id="newSkillMenuItem" mnemonicParsing="false" text="Skill" />
                  <MenuItem fx:id="newBacklogMenuItem" mnemonicParsing="false" text="Backlog" />
                  <MenuItem fx:id="newStoryMenuItem" mnemonicParsing="false" text="Story" />
                </items>
              </Menu>
              <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem fx:id="openMenuItem" mnemonicParsing="false" text="Open" />
              <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" text="Save" />
              <MenuItem fx:id="saveAsMenuItem" mnemonicParsing="false" text="Save As" />
              <MenuItem fx:id="revertMenuItem" mnemonicParsing="false" text="Revert" />
              <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem fx:id="searchMenuItem" mnemonicParsing="false" text="Search" />
      
              <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem fx:id="generateStatusReportMenuItem" mnemonicParsing="false" text="Generate Report" />
              <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem fx:id="quitMenuItem" mnemonicParsing="false" text="Quit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem fx:id="undoMenuItem" mnemonicParsing="false" text="Undo" />
              <MenuItem fx:id="redoMenuItem" mnemonicParsing="false" text="Redo" />
              <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem fx:id="editMenuItem" mnemonicParsing="false" text="Edit Selected" />
              <MenuItem fx:id="deleteMenuItem" mnemonicParsing="false" text="Delete Selected" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="View">
            <items>
              <CheckMenuItem fx:id="listToggleCheckMenuItem" mnemonicParsing="false" selected="true" text="List" />
              <SeparatorMenuItem mnemonicParsing="false" />
              <CheckMenuItem fx:id="toolBarToggleCheckMenuItem" mnemonicParsing="false" selected="true" text="Toolbar" />
              <SeparatorMenuItem mnemonicParsing="false" />
              <RadioMenuItem fx:id="listShowProjectsMenuItem" mnemonicParsing="false" selected="true" text="Project">
                <toggleGroup>
                  <ToggleGroup fx:id="selectedTab" />
                </toggleGroup>
              </RadioMenuItem>
              <RadioMenuItem fx:id="listShowTeamsMenuItem" mnemonicParsing="false" text="Team" toggleGroup="$selectedTab" />
              <RadioMenuItem fx:id="listShowPeopleMenuItem" mnemonicParsing="false" text="People" toggleGroup="$selectedTab" />
              <RadioMenuItem fx:id="listShowSkillsMenuItem" mnemonicParsing="false" text="Skills" toggleGroup="$selectedTab" />
            </items>
          </Menu>
      
        </menus>
      
      </MenuBar>
   </children>
  <fx:include fx:id="toolBar" source="toolbar.fxml" />
</VBox>
