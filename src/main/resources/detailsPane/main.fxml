<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="detailsPane" xmlns="http://javafx.com/javafx/2.2" fx:controller="seng302.group4.viewModel.DetailsPaneController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
  <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10" prefHeight="-1.0" prefWidth="-1.0">
          <children>
              <Button fx:id="allocateTeamButton" mnemonicParsing="false" text="Allocate Teams" visible="false"/>
              <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete" />
              <Button fx:id="editButton" mnemonicParsing="false" text="Edit" />
          </children>
          <padding>
              <Insets top="20.0" />
          </padding>
      </HBox>
  </bottom>
  <center>
    <StackPane fx:id="stackPane">
      <children>
        <fx:include fx:id="projectDetailsPane" source="project.fxml" />
        <fx:include fx:id="personDetailsPane" source="person.fxml" />
        <fx:include fx:id="skillDetailsPane" source="skill.fxml" />
        <fx:include fx:id="teamDetailsPane" source="team.fxml" />
        <fx:include fx:id="releaseDetailsPane" source="release.fxml" />
      </children>
    </StackPane>
  </center>
</BorderPane>
