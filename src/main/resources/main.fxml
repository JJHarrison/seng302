                   <Label fx:id="listLabel" alignment="CENTER_LEFT" maxHeight="-1.0" maxWidth="-1" prefHeight="-1.0" prefWidth="-1.0" styleClass="title" text="project">
                     <font>
                       <Font name="System Bold" size="18.0" />
                     </font>
                     <VBox.margin>
                       <Insets left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                   </Label>
                   <TabPane fx:id="tabViewPane">
                      <tabs>
                        <Tab fx:id="projectTab" closable="false" text="Project">
                           <content>
                             <ListView fx:id="projectListView" editable="true" />
                           </content>
                        </Tab>
                        <Tab fx:id="teamsTab" closable="false" text="Teams">
                           <content>
                             <ListView fx:id="teamsListView" />
                           </content>
                        </Tab>
                        <Tab fx:id="peopleTab" closable="false" text="People">
                           <content>
                             <ListView fx:id="peopleListView" />
                           </content>
                        </Tab>
                        <Tab fx:id="skillsTab" closable="false" text="Skills">
                           <content>
                             <ListView fx:id="skillsListView"/>
                           </content>
                        </Tab>
                        <Tab fx:id="releasesTab" closable="false" text="Release">
                           <content>
                               <ListView fx:id="releasesListView" />
                           </content>
                        </Tab>
                      </tabs>
                   </TabPane>
                 </children>
              </VBox>
            </children>
         </AnchorPane>
         <AnchorPane minWidth="500" >
            <children>
              <fx:include fx:id="detailsPane" source="detailsPane/main.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            </children>
         </AnchorPane>
       </items>
    </SplitPane>
  </center>
  <top>
    <fx:include fx:id="menuBar" source="menubar.fxml" />
  </top>
</BorderPane>
